{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core API Gateway",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-apigateway",
            "program": "${workspaceFolder}/webapi-gateway/bin/Debug/netcoreapp3.1/webapi-gateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/webapi-gateway",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core API MicroService Bank",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-microservicebank",
            "program": "${workspaceFolder}/microservice-bank/bin/Debug/netcoreapp3.1/microservice-bank.dll",
            "args": [],
            "cwd": "${workspaceFolder}/microservice-bank",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}